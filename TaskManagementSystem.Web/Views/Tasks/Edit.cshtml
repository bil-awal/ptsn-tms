@model UpdateTaskViewModel
@{
    ViewData["Title"] = "Edit Task";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col">
        <h1 class="h2 mb-0">
            <i class="fas fa-edit me-2"></i>Edit Task
        </h1>
        <p class="text-muted">Update task details</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">
                            <i class="fas fa-heading me-1"></i>Task Title
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter task title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" 
                                  placeholder="Provide a detailed description of the task"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <label asp-for="DueDate" class="form-label">
                                <i class="fas fa-calendar-alt me-1"></i>Due Date
                            </label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-4 mb-4">
                            <label asp-for="Priority" class="form-label">
                                <i class="fas fa-flag me-1"></i>Priority
                            </label>
                            <select asp-for="Priority" class="form-select">
                                <option value="1">Low</option>
                                <option value="2">Medium</option>
                                <option value="3">High</option>
                                <option value="4">Urgent</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-4 mb-4">
                            <label asp-for="Status" class="form-label">
                                <i class="fas fa-tasks me-1"></i>Status
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">To Do</option>
                                <option value="2">In Progress</option>
                                <option value="3">Completed</option>
                                <option value="4">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="AssignedToUserId" class="form-label">
                            <i class="fas fa-user-check me-1"></i>Assign To
                        </label>
                        <select asp-for="AssignedToUserId" asp-items="ViewBag.Users" class="form-select">
                            <option value="">-- Unassigned --</option>
                        </select>
                        <span asp-validation-for="AssignedToUserId" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="card-title text-info">
                    <i class="fas fa-info-circle me-2"></i>Status Guidelines
                </h6>
                <div class="small">
                    <div class="mb-2">
                        <span class="badge badge-status-todo me-2">To Do</span>
                        Task not started yet
                    </div>
                    <div class="mb-2">
                        <span class="badge badge-status-inprogress me-2">In Progress</span>
                        Currently working on task
                    </div>
                    <div class="mb-2">
                        <span class="badge badge-status-completed me-2">Completed</span>
                        Task finished successfully
                    </div>
                    <div>
                        <span class="badge badge-status-cancelled me-2">Cancelled</span>
                        Task no longer needed
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3 bg-light border-0">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-history me-2"></i>Quick Actions
                </h5>
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@ViewBag.TaskId" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@ViewBag.TaskId" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash me-2"></i>Delete Task
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
