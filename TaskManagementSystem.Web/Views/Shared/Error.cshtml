@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="text-center py-5">
            <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4"></i>
            <h1 class="display-4 mb-3">Oops!</h1>
            <h2 class="h4 mb-3">An error occurred while processing your request.</h2>
            <p class="text-muted mb-4">
                Sorry for the inconvenience. The error has been logged and we'll look into it.
            </p>
            
            @if (Model?.ShowRequestId ?? false)
            {
                <div class="alert alert-secondary" role="alert">
                    <strong>Request ID:</strong> <code>@Model?.RequestId</code>
                </div>
            }
            
            <div class="d-flex justify-content-center gap-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Go to Dashboard
                </a>
                <button class="btn btn-light" onclick="window.history.back()">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </button>
            </div>
        </div>
    </div>
</div>
