@model CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col">
        <h1 class="h2 mb-0">
            <i class="fas fa-user-plus me-2"></i>Create New User
        </h1>
        <p class="text-muted">Add a new user to the system</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="text-center mb-4">
                        <div class="avatar-xl bg-light text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-user me-1"></i>Full Name
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" 
                               placeholder="Enter user's full name" autofocus />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email Address
                        </label>
                        <input asp-for="Email" type="email" class="form-control form-control-lg" 
                               placeholder="user@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="form-text">This email will be used for task assignments and notifications.</div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Create User
                        </button>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="alert alert-info mt-3" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Note:</strong> Users can be assigned to tasks after creation. Make sure to use a valid email address.
        </div>
    </div>
</div>

<style>
    .avatar-xl {
        width: 100px;
        height: 100px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Email validation feedback
        var emailElement = document.getElementById('Email');
        if (emailElement) {
            emailElement.addEventListener('input', function(e) {
            const email = e.target.value;
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            
            if (email && !emailRegex.test(email)) {
                e.target.classList.add('is-invalid');
            } else {
                e.target.classList.remove('is-invalid');
            }
            });
        }
    </script>
}
